{% extends "base.html.twig" %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}
    <div class="row">

        <div class="presentation">
            <h2>
                <h4>{{ title }} | <a href="{{ path('episode_edit', {slug: episode.slug}) }}">Edit</a></h4>
                <span>{{ episode.format.name }} </span>
                <span>{{ episode.episode }} </span>
                <span>{{ episode.voice.name }} </span>
                <span>Saison </span>
                <span>{{ episode.season }}</span>
            </h2>
            <div>
                <ul>
                    {% for url in episode.video %}
                        <li>{{ url }}</li>
                    {% endfor %}
                </ul>
            </div>

        </div>

    </div>
{% endblock %}