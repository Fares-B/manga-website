{% extends "base.html.twig" %}
{% block title %}
    {{ anime.title }}
{% endblock %}
{% block body %}

    <div class="row">

        <div class="presentation">
            <h2>{{ anime.title }} | <a href="{{ path('anime_edit', {slug: anime.slug}) }}">Edit</a></h2>
            <div><img src="{{ anime.image }}" alt="{{ anime.title }}" /></div>
            <div>date de parution : {{ anime.published }}</div>
            <div>synopsis : {{ anime.content }}</div>
            <div>type : {{ anime.type.name }}</div>
            <div>genre : 
                {% for kind in anime.kind %}
                    {{ kind.name }}{% if not loop.last %}, {% endif %}
                {% endfor %}
            </div>
            {# <div>genre : {{ anime.kind.name | join(', ') }}</div> #}
            <div>status : {{ anime.status.name }}</div>
            <div>auteur : {{ anime.author }}</div>
            <div>titre alternatif : {{ anime.alternativeTitle }}</div>
            {# <div>studio d'animation : {{ anime.studio }}</div> #}
            <div>pays : {{ anime.country }}</div>
            {# <div>licenci√© : {{ anime.licence }}</div>             #}
        </div>

    </div>

{% endblock %}