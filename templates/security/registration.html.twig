{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}

<h3>Inscription sur le site</h3>
<div class="form-">
    {{ form_start(form) }}
        {{ form_row(form.username) }}
        {{ form_row(form.password) }}
        {{ form_row(form.confirm_password) }}
        <button type="submit" class="btn btn-success">Inscription</button>
    {{ form_end(form) }}
</div>
{% endblock %}
